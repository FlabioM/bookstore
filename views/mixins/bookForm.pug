mixin bookForm(book, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='title') Book Title
                input(id='title' name='title' value= book.title)

            div.form-input
                label(for='author') Author
                input(id='author' name='author' value= book.author)

            div.form-input
                label(for='publisher') Publisher
                input(id='publisher' name='publisher' value= book.publisher)

            div.form-input
                label(for='genre') Genre
                input(id='genre' name='genre' value= book.genre)

            div.form-input
                label(for='numOfPages') Number of Pages
                input(id='numOfPages' name='numOfPages' value=book.numOfPages)

            div.form-input
                label(for='imageOfCover') Add Book Cover
                input(id='imageOfCover' name='imageOfCover' value=book.imageOfCover


)