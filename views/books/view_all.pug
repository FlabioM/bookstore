extends ../layout

block content
    h3 Books
    a(href='/books/add') Add Book
    table
        thead
            tr
                th Book Title
                th author
                th publisher
                th genre
                th number of pages
                th book cover
                th
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.numOfPages
                    td= book.imageOfCover
                    td
                        a(href=`/books/profile/${book.id}`) View Book
